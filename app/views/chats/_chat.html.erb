<li id="chatline" style="list-style-type:none; margin-left: -10px;">
  <span id="messagetime" style="float: right; font-size:.6em; color:gray; margin-right:24px;"><%= chat.chattime %> ago</span>
  <span style="color:red;"><%= chat.user.username if chat.user %>
    <% if chat.user %>
    :
    <% end %>
  </span>
  <% if chat.user %>
    <span><%= chat.message %></span>
  <% else %>
    <span style="color:purple; font-size:.9em;"><i><%= chat.message %></i></span>
  <% end %>
</li>
