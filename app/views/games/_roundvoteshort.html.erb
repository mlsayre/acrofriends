    <div id="voterounds">
      <div class="voteroundbutton">
        <%= button_tag "Round 1 Voting", :id => "r1votebutton" %>
        <%= button_tag "Round 2 Voting", :id => "r2votebutton" %>
        <%= button_tag "Round 3 Voting", :id => "r3votebutton" %>
        <%= button_tag "Round 4 Voting", :id => "r4votebutton" %>
      </div>

      <div class="votearea" id="r1vote">
        <div class="roundtitle">Round 1</div>
        (Category: <span class="gamecategories"><%= @game.r1cat %></span>)<br>
        <% @gameanswers.shuffle.each do |answer| %>
          <% if answer.r1answer %>
            <div class="votebutton1div">
              <%= button_to "Vote", {:controller => "gamedata", :action => "vote", :user_id => answer.user_id, :method => "post", :round => "round1", :game_id => @game.id, :r1voted => true}, :class => "votebuttons", remote: true %>
            </div>
            "<%= Obscenity.replacement(:stars).sanitize(answer.r1answer) %>"
          <% end %>
          <br>
        <% end %><br>
        <% if @gamedata.r1answer %>
          Your acro: "<%= Obscenity.replacement(:stars).sanitize(@gamedata.r1answer) %>"
        <% else %>
          You didn't enter an acro this round.
        <% end %>
        <div class="answervotedfor" id="r1votedfor">
          <% if @currentgamedata.r1votedfor == 0 %>
            Your vote: You haven't voted yet...
          <% else %>
            Your vote: "<%= Gamedata.where(:game_id => @game.id).where(:user_id => @currentgamedata.r1votedfor).first.r1answer %>"
          <% end %>
        </div>
      </div>

