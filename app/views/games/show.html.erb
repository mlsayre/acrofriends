<% @mainpagetitle = @game.name %>
<%= render "shared/topbar" %>

<!-- //////////////// GAME PLAY ROUNDS //////////////// -->
<% if DateTime.now.utc < @game.playendtime %>
  <% if @game.length == "1hour" %>
    <%= render "roundplayshort" %>
    <%= render "shared/gamead" %>
  <% elsif @game.length == "6hour" %>
    <%= render "roundplaylong" %>
    <%= render "shared/gamead" %>
  <% end %>
<% end %>

<!-- //////////////// GAME VOTING ROUND //////////////////// -->
<% if DateTime.now.utc >= @game.playendtime && DateTime.now.utc <= @game.voteendtime %>
  <% if @game.playercount < 3 %>
    Sorry, there weren't enough players to continue to the voting round.
  <% else %>
    <% if @game.length == "1hour" %>
      <%= render "roundvoteshort" %>
    <% elsif @game.length == "6hour" %>
      <%= render "roundvotelong" %>
    <% end %>
  <% end %>
<% end %>

<!-- ////////////////// GAME OVER - RESULTS SECTION ///////////////// -->
<% if DateTime.now.utc >= @game.voteendtime %>
  <% if @game.playercount < 3 %>
    Sorry, there weren't enough players to complete this game.
  <% else %>
    <!-- results code here -->
    <% Gamedata.where(:game_id => @game.id).order('r1points DESC').each do |answer| %>
    <%= answer.r1points %> votes for <%= User.where(:id => answer.user_id).first.username %>:
        "<%= Obscenity.replacement(:stars).sanitize(answer.r1answer) %>"
      </br>
    <% end %>
  <% end %>
<% end %>


<%= javascript_include_tag "page/playgame" %>
<%= javascript_include_tag "page/validation" %>
