<% @mainpagetitle = "Lightning Mode" %>
<%= render "shared/topbar" %>

<div id="newgamepage">
  <% if current_user.nextlightning == "play" %>
    <%= form_for(@lightning) do |f| %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div class="actions">
        <%= f.submit "Play Lightning Mode", :class => "button" %>
      </div>
    <% end %>
  <% else %>
    <%= link_to(lightningvote_lightnings_path) do %>
      <div class="button" style="margin-bottom: 100px;">
        Play Lightning Mode
      </div>
    <% end %>
  <% end %><br>

  <u>Your completed lightning acros</u><br>
    <% @finishedlightning.each do |game| %>

      <span class="completedgamelink">
        <%= link_to(game) do %>

          <div class="button">

            <span class="gamelistname"><%= game.category %><br>
            </span>
            "<%= game.answer %>"

          </div>
        <% end %></span>
      <br>
    <% end %>
</div>

<%= render "shared/bottombar" %>
