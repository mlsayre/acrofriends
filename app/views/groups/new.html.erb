<% @mainpagetitle="Start a Group" %>
<%= render "shared/topbar" %>

<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "New group name" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :private, "Private?" %><br>
    <%= f.check_box :private %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', groups_path %>

<%= render "shared/bottombar" %>
